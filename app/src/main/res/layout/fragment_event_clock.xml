<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".eventsHandling.EventClockFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="438dp"
        android:orientation="vertical">

        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:amPmBackgroundColor="@color/gui_color"
            android:headerBackground="@color/gui_color"
            android:numbersBackgroundColor="@color/black"
            android:numbersSelectorColor="@color/gui_color"
            android:numbersTextColor="@color/white">

        </TimePicker>

        <Button
            android:id="@+id/clockFragmentGoBackButton"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gui_color"
            android:text="Save" />

    </LinearLayout>

</FrameLayout>